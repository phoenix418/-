#include <iostream>
using namespace std;


void сжатьМассив(int* &arr, int &размер) {
  int новыйРазмер = 0;
  for (int i = 0; i < размер; ++i) {
    if (arr[i] != 0) {
    arr[новыйРазмер] = arr[i];
    новыйРазмер++;
        }
    }
  int* новыйМассив = new int[новыйРазмер];
  for (int i = 0; i < новыйРазмер; ++i) {
    новыйМассив[i] = arr[i];
    }
    delete[] arr;
    arr = новыйМассив;
    размер = новыйРазмер;
}


int найтиИндекс(int* arr, int размер, int значение) {
  for (int i = 0; i < размер; ++i) {
    if (arr[i] == значение) {
    return i;
}
}
return -1;
}


int main() {
  cout << "введите колво элементов массива: ";
  int размер ;
