   int* массив = new int[размер];
  for(int i = 0; i < размер; i++){
    cout << "введите элемент массива: ";
    cin >> массив[i];
    }
    сжатьМассив(массив, размер);
    cout << "Сжатый массив: ";
    for (int i = 0; i < размер; ++i) {
        cout << массив[i] << " ";
    }
