}
  cout << "введите значение которое хотите найти: ";
  int значение;
  cin >> значение;
  int индекс = найтиИндекс(массив, размер, значение);
  if (индекс != -1) {
    cout << "Индекс первого вхождения элемента " << значение << ": " << индекс << "\n";
} 
  else {
    cout << "Элемент не найден в массиве." <<"\n";
}
delete[] массив;
